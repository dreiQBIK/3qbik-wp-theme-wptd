{% extends "base.twig" %}

{% set content = post.meta('tinymce') %}

{% block content %}
   <div class="l_page pt-400 pt-md-600 pb-600 pb-md-800" data-template="tpl-editor.twig">

      <header class="container container--narrow">
         <h1>{{ post.title }}</h1>
      </header>

      <div class="container container--narrow">
         <div class="row">
            <div class="col col-12">
               <div class="tinymce">{{ content }}</div>
            </div>
         </div>
      </div>

   </div>
{% endblock %}
