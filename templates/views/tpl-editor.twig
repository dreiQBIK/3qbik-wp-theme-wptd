{% extends "base.twig" %}

{% set content = post.meta('tinymce') %}

{% block content %}
   <div class="l_page" data-template="tpl-editor.twig">

      <header class="container">
         <h1>{{ post.title }}</h1>
      </header>

      <div class="container">
         <div class="row">
            <div class="col col-12 col-md-8">
               <h2>{{ __( 'Content', 'wptd' ) }}</h2>
               <div class="tinymce">{{ content }}</div>
            </div>
         </div>
      </div>

   </div>
{% endblock %}
