{# USES
   {% include "/partials/modules/m_heading.twig" with {
      wrapper_classes: '',
      heading_classes: '',
      heading: '',
      heading_type: '',
      heading_sub: '',
      heading_sub_type: '',
   } %}
#}

{% if heading or heading_sub %}
   <header class="m_heading {{ wrapper_classes }}">

      {% if heading and heading_type %}
         <{{ heading_type|default("h2") }} class="h2 {{ heading_classes }}{% if not heading_sub %} mb-0{% endif %}">{{ heading }}</{{ heading_type|default("h2") }}>
      {% endif %}
      {% if heading_sub %}
         <{{ heading_sub_type|default("h3") }} class="h3 {{ heading_classes }} mb-0">{{ heading_sub }}</{{ heading_sub_type|default("h3") }}>
      {% endif %}

   </header>
{% endif %}
