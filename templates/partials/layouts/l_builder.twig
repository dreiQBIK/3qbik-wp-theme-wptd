{% set modules = post.meta('builder_content') %}
{% for module in modules %}

   {# Module: HEADING #}
   {% if module.acf_fc_layout == 'bl_heading' %}
      {% include "/partials/builder/bl_heading.twig" with {
         space_bottom: module.bl_heading.margin,
         heading: module.bl_heading.text,
      }%}
   {% endif %}

   {# Module: EDITOR #}
   {% if module.acf_fc_layout == 'bl_editor' %}
      {% include "/partials/builder/bl_editor.twig" with {
         space_bottom: module.bl_editor.margin,
         editor: module.bl_editor.wysiwyg,
      }%}
   {% endif %}

   {# Module: IMAGE #}
   {% if module.acf_fc_layout == 'bl_image' %}
      {% include "/partials/builder/bl_image.twig" with {
         space_bottom: module.bl_image.margin,
         image: module.bl_image.image,
         image_settings: module.bl_image.image_settings,
      }%}
   {% endif %}

   {# Module: VIDEO #}
   {% if module.acf_fc_layout == 'bl_video' %}
      {% include "/partials/builder/bl_video.twig" with {
         space_bottom: module.bl_video.margin,
         show_video_caption: module.bl_video.truefalse_alt,
         video_caption: module.bl_video.text,
         video: module.bl_video.video,
      }%}
   {% endif %}

{% endfor %}
