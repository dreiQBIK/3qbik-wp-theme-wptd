{% set modules = post.meta('builder_content') %}
{% for module in modules %}

   {# Module: HEADLINE #}
   {% if module.acf_fc_layout == 'bl_heading' %}
      {% include "/partials/builder/bl_headline.twig" with {
         space_bottom: module.bl_heading.margin,
         headline: module.bl_heading.text,
      }%}
   {% endif %}

   {# Module: TEXT #}
   {% if module.acf_fc_layout == 'bl_editor' %}
      {% include "/partials/builder/bl_text.twig" with {
         space_bottom: module.bl_editor.margin,
         editor: module.bl_editor.wysiwyg,
      }%}
   {% endif %}

   {# Module: IMAGE #}
   {% if module.acf_fc_layout == 'bl_image' %}
      {% include "/partials/builder/bl_image.twig" with {
         space_bottom: module.bl_image.margin,
         image: module.bl_image.image,
         image_settings: module.bl_image.image_settings,
      }%}
   {% endif %}

{% endfor %}
