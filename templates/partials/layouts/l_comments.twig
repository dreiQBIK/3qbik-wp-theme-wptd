    {%  if post.password_required %}
        <div class="notice">
            <p>{{ __( ' Dieser Beitrag ist passwortgesch√ºtzt. Bitte geben Sie das Passwort ein, um Kommentare zu sehen.', 'wptd' ) }}</p>
