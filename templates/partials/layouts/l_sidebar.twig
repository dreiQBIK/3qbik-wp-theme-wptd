<aside class="l_sidebar">
   <div class="container sp-md">
      <h2>Sidebar</h2>
      <div class="row">
         <div class="col col-12 col-md-6">
            <section class="l_sidebar__section">
               <h3>Kategorien</h3>
               <ul class="l_sidebar__section-list">
               {% for cat in categories %}
                  <li>
                     <a href="{{ cat.link }}">{{ cat.name }}</a>
                  </li>
               {% endfor %}
               </ul>
            </section>
         </div>
         <div class="col col-12 col-md-6">
            <section class="l_sidebar__section">
               <h3>Tags</h3>
               <ul class="l_sidebar__section-list">
               {% for tag in tags %}
                  <li>
                     <a href="{{ tag.link }}">{{ tag.name }}</a>
                  </li>
               {% endfor %}
               </ul>
            </section>
         </div>
      </div>
   </div>
</aside>
