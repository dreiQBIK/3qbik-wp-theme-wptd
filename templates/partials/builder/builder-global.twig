{# USES
   {% include '/partials/builder/builder-global.twig' %}
#}

{% set modules = post.meta('builder_global_content') %}
{% for module in modules %}

   {# Module: TEXT #}
   {% if module.acf_fc_layout == 'blg_text' %}
      {% include "/partials/builder/modules-global/blg_text.twig" with {
         all_fields    : module.blg_text,
         margin        : module.blg_text.tab_settings.margin,
         id            : module.blg_text.tab_settings.id,
         toggle_heading: module.blg_text.toggle_heading,
         text          : module.blg_text.text,
      } %}

   {# Module: SITE-TEASER-CAROUSEL #}
   {% elseif module.acf_fc_layout == 'blg_site_teaser_carousel' %}
      {% include "/partials/builder/modules-global/blg_site-teaser-carousel.twig" with {
         all_fields    : module.blg_site_teaser_carousel,
         margin        : module.blg_site_teaser_carousel.tab_settings.margin,
         id            : module.blg_site_teaser_carousel.tab_settings.id,
         toggle_heading: module.blg_site_teaser_carousel.toggle_heading,
         teaser        : module.blg_site_teaser_carousel.teaser,
      } %}

   {# Module: CARD-TEASER #}
   {% elseif module.acf_fc_layout == 'blg_card_teaser' %}
      {% include "/partials/builder/modules-global/blg_card-teaser.twig" with {
         all_fields    : module.blg_card_teaser,
         margin        : module.blg_card_teaser.tab_settings.margin,
         id            : module.blg_card_teaser.tab_settings.id,
         toggle_heading: module.blg_card_teaser.toggle_heading,
         teaser        : module.blg_card_teaser.teaser,
      } %}

   {# Module: TESTIMONIALS #}
   {% elseif module.acf_fc_layout == 'blg_testimonials' %}
      {% include "/partials/builder/modules-global/blg_testimonials.twig" with {
         all_fields    : module.blg_testimonials,
         margin        : module.blg_testimonials.tab_settings.margin,
         id            : module.blg_testimonials.tab_settings.id,
         toggle_heading: module.blg_testimonials.toggle_heading,
         teaser        : module.blg_testimonials.teaser,
      } %}

   {% endif %}

{% endfor %}
