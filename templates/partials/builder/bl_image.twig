{# USES
   space_bottom => type: string
   image => type: object
   image_settings => type: object
#}

{% set show_caption = image_settings.truefalse_caption %}
{% set show_lightbox = image_settings.truefalse_lightbox %}

<div class="container {{ space_bottom }}">
   <div class="bl_image">
      <div class="row">
         <div class="col col-12">

            <figure class="bl_image__figure{% if show_lightbox %} with-lightbox{% endif %}">
               <img
                     class="bl_image__img lazyload"
                     alt="{{ image.alt }}"
                     src="{{ theme.link }}/assets/img/placeholder-wide-large.png"
                     data-src="{{ image.sizes.medium_large }}"
                     data-srcset="
                        {% if image.sizes.thumbnail|length != image.url|length %}
                           {{ image.sizes.thumbnail }} 150w,
                        {% endif %}
                        {% if image.sizes.medium|length != image.url|length %}
                           {{ image.sizes.medium }} 300w,
                        {% endif %}
                        {% if image.sizes.medium_large|length != image.url|length %}
                           {{ image.sizes.medium_large }} 768w,
                        {% endif %}
                        {% if image.sizes.large|length != image.url|length %}
                           {{ image.sizes.large }} 1024w,
                        {% endif %}
                        {% if image.sizes.wptd_thumb_l|length != image.url|length %}
                           {{ image.sizes.wptd_thumb_l }} 1600w,
                        {% endif %}
                        {% if image.sizes.wptd_thumb_xl|length != image.url|length %}
                           {{ image.sizes.wptd_thumb_xl }} 1920w,
                        {% endif %}"
                     data-sizes="auto"
                  />
                  {% if show_lightbox %}
                  <svg class="icon bl_image__zoom"><use href="#icon-zoom-in" xlink:href="#icon-zoom-in"/></svg>
               {% endif %}
            </figure>
            {% if show_caption %}
               <figcaption class="bl_image__caption">{{ image.caption }}</figcaption>
            {% endif %}

         </div>
      </div>
   </div>
</div>
