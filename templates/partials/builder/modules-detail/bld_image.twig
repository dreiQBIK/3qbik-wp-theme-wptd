{# USES
   {% include "/partials/builder/bld_image.twig" with {
      space_bottom: '',
      image: {},
      image_settings: {},
   } %}
#}

{% set show_caption = image_settings.truefalse_caption %}
{% set show_lightbox = image_settings.truefalse_lightbox %}

<div class="container {{ space_bottom }}">
   <div class="bld_image">
      <div class="row">
         <div class="col col-12">

            <figure class="bld_image__figure{% if show_lightbox %} with-lightbox{% endif %}">
               <img
                  class="bld_image__img lazyload"
                  alt="{{ image.alt }}"
                  src="{{ theme.link }}/assets/img/placeholder-wide-large.png"
                  data-src="{{ image.sizes.medium_large }}"
                  data-srcset="{{ fn('wp_get_attachment_image_srcset', image.id) }}"
                  data-sizes="auto"
               />
               {% if show_lightbox %}
                  <svg class="icon bld_image__zoom"><use href="#icon-zoom" xlink:href="#icon-zoom"/></svg>
               {% endif %}
            </figure>
            {% if show_caption %}
               <figcaption class="bld_image__caption">{{ image.caption }}</figcaption>
            {% endif %}
         </div>
      </div>
   </div>
</div>
